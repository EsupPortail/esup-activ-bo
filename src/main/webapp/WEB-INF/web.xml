<?xml version="1.0"?>

<!-- 
    /webapp/WEB-INF/web.xml
    The main configuration file of the application for servlet installations.
-->

<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>esup-activ-bo</display-name>

    <context-param>
        <param-name>log4jConfigLocation</param-name>
         <param-value>classpath:/properties/logging/log4j.xml</param-value>
    </context-param>

    <context-param>
        <description>
            The location of the main configuration file of the Spring framework.
        </description>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath:/properties/applicationContext.xml
        </param-value>
    </context-param>

    <listener>
        <listener-class>
            org.springframework.web.util.Log4jConfigListener
        </listener-class>
    </listener>

    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>

    <filter>
      <filter-name>Log4jFilterAddIP</filter-name>
      <filter-class>org.esupportail.activbo.web.Log4jFilterAddMDC</filter-class>
      <init-param>
        <param-name>headers</param-name>
        <param-value>Client-IP Client-User-Agent</param-value>
      </init-param>
    </filter>
    <filter-mapping>
      <filter-name>Log4jFilterAddIP</filter-name>
      <url-pattern>/xfire/*</url-pattern>
    </filter-mapping>

<servlet>
        <servlet-name>xfire</servlet-name>
        <servlet-class>
        org.esupportail.commons.web.servlet.XFireServlet
        </servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>xfire</servlet-name>
        <url-pattern>/xfire/*</url-pattern>
    </servlet-mapping>

</web-app>
